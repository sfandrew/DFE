
<div class="row">
  <h1 class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
  	<%= @dynamic_form_type.name %>
    <%= content_tag :small, @dynamic_form_type.description %>
  </h1>

  <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
    <%= link_to "New #{@dynamic_form_type.name}", new_dynamic_form_entry_path(:dynamic_form_type_id => params[:id]),:class => "btn btn-success pull-right" %>
    <%= link_to 'Edit Form', edit_dynamic_form_type_path(@dynamic_form_type), :class => 'btn btn-info' %>

  </div>
</div>
  
<table class="table table-striped table-hover">
  <thead>
    <tr class="well">
      <th width="1%">#</th>
      <th width="10%">Name</th>
      <th width="10%">Type</th>
      <th width="10%">Options</th>
      <th width="10%">Required ?</th>
      <th width="10%">Included in Report?</th>
    </tr>
  </thead>
  <tbody>
    <% @form_fields.each do |fields| %>
      <tr>
        <td><%= (fields.field_order)+1 %></td>
      	<td><%= fields.name %></td>
        <td><%= fields.field_type.titleize %></td>
        <td><%= !fields.content_meta.empty? ? fields.content_meta : 'None' %></td>
        <td><%= fields.required ? 'Yes' : 'No' %></td>
        <td><%= fields.included_in_report ? 'Yes' : 'No' %></td>
      </tr>
    <% end %>
  </tbody>
</table>




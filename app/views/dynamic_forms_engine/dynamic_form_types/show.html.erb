<style type="text/css">
  th{
    text-align: center;
    vertical-align: middle;
  }
  .table > thead > tr > th {
    vertical-align: middle;
  }
  td{
    text-align: center;
  }

</style>
<div class="row">
  <h1 class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
  	<%= @dynamic_form_type.name %>
    <%= content_tag :small, @dynamic_form_type.description %>
  </h1>

  <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
    <%= link_to "New #{@dynamic_form_type.name}", new_dynamic_form_entry_path(:dynamic_form_type_id => params[:id]),:class => "btn btn-success pull-right" %>
  </div>
</div>
  
<table class="table table-striped table-hover">
  <thead>
    <tr class="well">
      <th>#</th>
      <th>Field Type</th>
      <th>Field Name</th>
      <th>Field Options</th>
      <th>Field Required ?</th>
      <th>Field Included in Report?</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @form_fields.each do |fields| %>
      <tr>
        <td><%= (fields.field_order)+1 %></td>
        <td><%= fields.field_type.titleize %></td>
      	<td><%= fields.name %></td>
        <td><%= !fields.content_meta.empty? ? fields.content_meta : 'None' %></td>
        <td><%= fields.required ? 'Yes' : 'No' %></td>
        <td><%= fields.included_in_report ? 'Yes' : 'No' %></td>
        <td><%= link_to 'Edit', edit_dynamic_form_type_path(@dynamic_form_type), :class => 'btn btn-info' %></td>
      </tr>
    <% end %>
  </tbody>
</table>





<div class="row">
  <h1 class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
  	<%= @dynamic_form_type.name %>
    <%= content_tag :small, @dynamic_form_type.description %>
  </h1>

  <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
    <%= link_to "New #{@dynamic_form_type.name}", new_dynamic_form_entry_path(:dynamic_form_type_id => params[:id]),:class => "btn btn-success pull-right" %>
    <%= link_to "Edit #{@dynamic_form_type.name}", edit_dynamic_form_type_path(@dynamic_form_type), :class => "btn btn-info pull-right" %>
  </div>
</div>
  
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Field Type</th>
      <th>Field Name</th>
    </tr>
  </thead>

  <tbody>
    <% @form_fields.each do |fields| %>
      <tr>
        <td><%= fields.field_type.titleize %></td>
      	<td><%= fields.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>




  <li class="next"><a href="#">Newer &rarr;</a></li>
</ul>

<script type="text/javascript">
$(document).ready(function(){

	$('.field-group, .field-group-save').hide();
	$('.field-group').first().show();
	
	var field_group_position = 0;
	function step_panes(){
		$('.btn-breadcrumb a:nth-child(2)').removeClass("btn-default");
		$('.btn-breadcrumb a:nth-child(2)').addClass("btn-primary");
		var $field_group = $('.field-group');
		field_group_size = $('.field-group').length;
		starting_index = 0;
		$('.next').on('click',function(){	
			// $('.field-group').each(function(i,obj) { console.log("this is Object:", obj) } );
			$('.field-group').eq(starting_index - 0).hide();
			$('.field-group').eq(starting_index + 1).show();
			$('.btn-breadcrumb a:nth-child(3)').removeClass("btn-default");
			$('.btn-breadcrumb a:nth-child(3)').addClass("btn-primary");
			starting_index ++;

		});
		$('.previous').on('click',function(){	
			// $('.field-group').each(function(i,obj) { console.log("this is Object:", obj) } );
			$('.field-group').eq(field_group_size - 1).hide();
			$('.field-group').eq(field_group_size - field_group_size).show();
			$('.btn-breadcrumb a:nth-child(3)').removeClass("btn-primary");
			$('.btn-breadcrumb a:nth-child(3)').addClass("btn-default");


		});
	}
	step_panes();

});

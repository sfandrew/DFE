
<div class="row">
	<h1 class="col-xs-12 col-sm-6 col-md-8"><%= @dynamic_form_entry.dynamic_form_type.name %> </h1>
	<div class="col-xs-6 col-md-4">
		<%= link_to("New #{@dynamic_form_entry.dynamic_form_type.name}", 
					new_form_entry_path(@dynamic_form_entry.dynamic_form_type), 
					:class=>"btn btn-success pull-left") %>

		<%= link_to("Entries", 
					form_entries_path(@dynamic_form_entry.dynamic_form_type), 
					:class=>"btn btn-info pull-right") %>
	</div>

</div>
<div class="well col-lg-12">
	<% @dynamic_form_entry.each_field_with_value do |field, value| %>
		<div class="row row-table">
			<label class="col-sm-2 control-label ">
				<%= field.name %>:
			</label>
			<div class="col-sm-10">
				<%= field.attachment? ? link_to("Download", value.filename.url) : value %>
			</div>
		</div>
	<% end %>

</div>





<div class="form-group">
  <%= f.label field.id, field.name.humanize, :class => "col-sm-2 control-label" %>
  <div class="col-sm-5">
    <%= f.file_field field.id, :multiple => true, value: '~/resume.doc', :class => "form-control"  %>

    <% if defined?(errors) and errors.present? %>
		<small style="color:red"><%= errors.join(', ') %></small>
	 <% end %>
  </div>
  <%= get_attachment(field_value) if !field_value.nil? %>
  <% if field.required? %>
	<span class="col-xs-1 required required-field">*</span>
  <% end %>
</div>


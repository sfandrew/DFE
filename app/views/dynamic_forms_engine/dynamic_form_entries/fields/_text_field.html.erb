<% field_value ||= nil %>
<div class="col-md-<%= field.field_width %>">
	<%= f.label field.name, field.name.humanize, :class => "col-md-3 control-label" %>
	<div class="col-md-7">
		<%= f.text_field field.id, value: field_value, :class => "form-control" %>
		<% if defined?(errors) and errors.present? %>
			<small class="error-msg"style="color:red"><%= errors.join(', ') %></small>
		<% end %>
		<% if field.required? %>
			<span class="required required-field">*</span>
		<% end %>
	</div>

</div>
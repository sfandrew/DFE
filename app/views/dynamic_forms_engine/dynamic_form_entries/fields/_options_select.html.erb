<% field_value ||= nil %>
<div class="options_select_container col-md-<%= field.field_width %>">
 	<%= f.label field.id, field.name.humanize, :class => "col-md-5 control-label" %>
	<div class="col-md-5">
	  	<%= f.select field.id,
	  					options_for_select(field.content_meta.split(","),selected: field_value),{},
	  					{:class => "form-select form-control",:style => "width: 200px;", 'data-id' => field_value } %>

	  	<% if defined?(errors) and errors.present? %>
			<small class="error-msg" style="color:red"><%= errors.join(', ') %></small>
		<% end %>
  	</div>
      <% if field.required? %>
        <span class="required required-field">*</span>
      <% end %>
</div>

<% field_value ||= nil %>
<div class="options_select_container col-md-<%= field.field_width %>">
 	<%= f.label field.id, field.name.humanize, :class => "col-sm-12 col-md-4 col-lg-4 control-label" %>
	<div class="col-sm-12 col-md-8 col-lg-8">
	  	<%= f.select field.id, options_for_select(field.content_meta.split(","),selected: field_value),{},{:class => "form-select form-control" } %>
	  	<% if defined?(errors) and errors.present? %>
			<small class="error-msg" style="color:red"><%= errors.join(', ') %></small>
		<% end %>
		
		<% if field.required? %>
			<span class="required required-field">*</span>
		<% end %>

  </div>

</div>

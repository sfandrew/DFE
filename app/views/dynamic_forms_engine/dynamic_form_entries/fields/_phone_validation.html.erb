<% field_value ||= nil %>
<div class="col-md-<%= field.field_width %>">
	<%= f.label field.id, field.name.humanize, :class => "col-md-2 control-label" %>
	<div class="col-md-4">
		<%= f.telephone_field field.id, value: field_value, :class => "form-control", :placeholder => "418-111-5555" %>
		<% if defined?(errors) and errors.present? %>
			<small class="error-msg" style="color:red"><%= errors.join(', ') %></small>
	  	<% end %>
	</div>
	<% if field.required? %>
		<span class="col-xs-1 required required-field">*</span>
  	<% end %>
</div>
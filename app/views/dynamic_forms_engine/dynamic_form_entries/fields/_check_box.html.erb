<% field_value ||= nil %>
<div class="form-group">
  	<%= f.label field.id, field.name.humanize, :class => 'control-label col-sm-2' %>
	<div class="col-sm-2">
		<% if field_value == "1" %>
  			<%= f.check_box field.id, {checked: true} %>
  		<% else %>
 			<%= f.check_box field.id %>
 		<% end %> 		
  		<% if defined?(errors) and errors.present? %>
			<small class="error-msg"style="color:red"><%= errors.join(', ') %></small>
	  	<% end %>
  	</div>
</div>
